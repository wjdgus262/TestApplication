<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_img">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/albumimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/empty_album_img" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/albumtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:fontFamily="@font/uhbe_family"
            android:text="매일 듣는 노래"
            android:textColor="#ec6387"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/albumartist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/uhbe_family"
            android:text="황치열"
            android:textColor="#ec6387"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#fff"
            android:id="@+id/albumid"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#fff"
            android:id="@+id/albumindex"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#fff"
            android:id="@+id/albumPath"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"                                                                            >

        <TextView
            android:id="@+id/albumduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/uhbe_family"
            android:text="01:01"
            android:textColor="#ec6387"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>